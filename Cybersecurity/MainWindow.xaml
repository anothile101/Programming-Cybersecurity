<Window x:Class="Cybersecurity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cybersecurity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Source="images/Picture.jpg" Stretch="Fill"></Image>
        <TextBlock Text="Cybersecurity Awareness Chatbot" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Yellow"/>

        <ListBox x:Name="ChatHistory" Margin="10,50,10,100"/>

        <TextBox x:Name="UserInput" Height="30" Margin="10,0,120,10" VerticalAlignment="Bottom"/>
        <Button Content="Send" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="Send_Click"/>
    </Grid>
</Window>
